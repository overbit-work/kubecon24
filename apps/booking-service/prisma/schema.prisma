datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Booking {
  attendee     Attendee?  @relation(fields: [attendeeId], references: [id])
  attendeeId   String?
  createdAt    DateTime   @default(now())
  id           String     @id @default(cuid())
  promotions   Promotion? @relation(fields: [promotionsId], references: [id])
  promotionsId String?    @unique
  updatedAt    DateTime   @updatedAt
}

model Attendee {
  bookings  Booking[]
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  name      String?
  surnam    String?
  updatedAt DateTime  @updatedAt
}

model Promotion {
  booking    Booking?
  coide      String?
  createdAt  DateTime  @default(now())
  expiryDate DateTime?
  id         String    @id @default(cuid())
  updatedAt  DateTime  @updatedAt
}
